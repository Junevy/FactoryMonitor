<Page
    x:Class="FactoryMonitor.Client.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fm="clr-namespace:FactoryMonitor.UserControls.Controls;assembly=FactoryMonitor.UserControls"
    xmlns:local="clr-namespace:FactoryMonitor.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomeView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <fm:SideMenu
            Grid.Row="0"
            Margin="0,10,0,0"
            Background="White"
            CloseButtonVisibility="Visible"
            CloseCommand="{Binding CloseTabCommand}"
            ContentFontFamily="Arial"
            ContentSize="20"
            ContentVisibility="Visible"
            IconMargin="5,0,5,0"
            IconSize="16"
            IndicatorCornerRadius="0"
            Items="{Binding Items}"
            MenuItemBackground="White"
            MenuItemHeight="40"
            MenuItemWidth="150"
            NavigateCommand="{Binding NavigateCommand}"
            Orientation="Horizontal" />

        <Border
            Grid.Row="1"
            Margin="0,-10,0,0"
            Background="#f5f5f5"
            BorderBrush="{StaticResource SubBackground}"
            BorderThickness="1"
            CornerRadius="0,5,0,0">
            <Grid />
        </Border>

    </Grid>
</Page>
