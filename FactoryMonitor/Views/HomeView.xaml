<Page
    x:Class="FactoryMonitor.Client.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fm="clr-namespace:FactoryMonitor.UserControls.Controls;assembly=FactoryMonitor.UserControls"
    xmlns:local="clr-namespace:FactoryMonitor.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomeView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">

        <fm:SideMenu
            ContentSize="20"
            
            ContentVisibility="Visible"
            IconSize="16"
            IconMargin="5,0,5,0"
            Items="{Binding Items}"
            MenuItemHeight="30"
            MenuItemWidth="100"
            ContentFontFamily="Arial"
            Orientation="Horizontal" />
    </Grid>
</Page>
